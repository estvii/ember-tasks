<form>
    {{log model}}
    <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value=model.title placeholder="Add task..."}}
        {{!-- <input type="text" class="form-control" @value=title placeholder="Add Task" /> --}}
    </div>
    <div class="form-group">
        <label>Due Date</label>
        {{input type="date" class="form-control" value=model.date }}

    </div>
    <div class="form-group">
        <label>Description</label>
        {{textarea type="text" class="form-control" value=model.description placeholder="Describe Task..."}}

    </div>
    <button {{action 'editTask' model.id}} class="btn btn-primary">Submit</button>
    {{!-- addTask is going to be a function in a tasks/new controller --}}
</form>